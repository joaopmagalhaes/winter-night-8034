root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.{js,jsx}]
indent_style = space
indent_size = 4

[*.{html,twig}]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
